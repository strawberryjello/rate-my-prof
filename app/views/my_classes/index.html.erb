<p id="notice"><%= notice %></p>

<h1>My Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_classes.each do |my_class| %>
      <tr>
        <td><%= my_class.name %></td>
        <td><%= link_to 'Show', my_class %></td>
        <td><%= link_to 'Edit', edit_my_class_path(my_class) %></td>
        <td><%= link_to 'Destroy', my_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New My Class', new_my_class_path %>
