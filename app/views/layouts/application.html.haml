!!! html
%html
  %head
    %title RateMyProf
    = csrf_meta_tags
    = csp_meta_tag
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no'}/

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.navbar.navbar-expand-md.navbar-light.bg-light.fixed-top
      %a.navbar-brand{href: '#'} RateMyProf
      .collapse.navbar-collapse
        %ul.navbar-nav.mr-auto
          %li.nav-item.active
            = link_to 'Classes', my_classes_path, {class: 'nav-link'}
          %li.nav-item.dropdown
            %a#prof-dropdown.nav-link.dropdown-toggle{href: '#', data: {toggle: 'dropdown'}, aria: {haspopup: 'true', expanded: 'false'}} Professors
            .dropdown-menu{aria: {labelledby: 'prof-dropdown'}}
              = link_to 'Professors', professors_path, {class: 'dropdown-item'}
              = link_to 'New Professor', new_professor_path, {class: 'dropdown-item'}

    %main.container{role: 'main'}
      = yield
